<%- include('layout/header') %>



    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <%- include('layout/sidenav') %>

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">
                        <%- include('layout/topnav') %>






                            <!-- Begin Page Content -->
                            <div class="container-fluid">
                                <div class="maincontainer2">
                                    <% if(message_failed.length) { %>
                                        <div class="alert alert-danger" role="alert">
                                            <%= message_failed %>
                                        </div>
                                        <% } %>
                                            <% if(message_success.length) { %>
                                                <div class="alert alert-success" role="alert">
                                                    <%= message_success %>Now You can go <a href="/admin/posts"
                                                            class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                                                                class="fas fa-download fa-sm text-white-50"></i> Show
                                                            Table</a>
                                                </div>
                                                <% } %>
                                                    <% if(message_warning.length) { %>
                                                        <div class="alert alert-warning" role="alert">
                                                            <%= message_warning %>
                                                        </div>
                                                        <% } %>
                                                            <div class="main10">

                                                                <div class="main11">
                                                                    <h1 class="hb1">Enter Your Details</h1>
                                                                </div>
                                                                <form action="/admin/adminpost" method="post" enctype="multipart/form-data"  class="fb">
                                                                    <div class="form-group">
                                                                        <label for="category">Category Name:</label>
                                                                        <select name="category" class="form-control go2" id="category">
                                                                            <% allCart.map(data => { %>
                                                                                <option value="<%= data._id %>"><%= data.categoryName %></option>
                                                                            <% }) %>
                                                                        </select>

                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="title">Title:</label>
                                                                        <input type="text" class="form-control go2"
                                                                        name="title" id="title"
                                                                        placeholder="Enter Your Title">

                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="subTitle">Subtitle:</label>
                                                                        <input type="text" class="form-control go2"
                                                                        name="subTitle" id="subTitle"
                                                                        placeholder="Enter Your SubTitle">

                                                                    </div>
                                                                    <div class="form-group">
                                                                       
                                                                        <label for="postText">Enter Posts:</label>
                                                                        <br>
                                                                        <textarea name="postText" id="postText" class="te" placeholder="Enter Your Posts"></textarea>
                                                                        

                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="image">Image:</label>
                                                                        <input type="file" class="form-control go2"
                                                                            name="image" id="image"
                                                                            placeholder="Enter Your Image" accept="image/*">

                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="user">User Name:</label>
                                                                        <select name="user" class="form-control go2" id="user">
                                                                            <% allUsers .map(data => { %>
                                                                                <option value="<%= data._id %>"><%= data.userName %></option>
                                                                            <% }) %>
                                                                        </select>

                                                                    </div>
                                                                    <button type="submit"
                                                                        class="btn btn-primary btn-user btn-block bt">
                                                                        Blog Details Entered
                                                                    </button>
                                                                </form>
                                                            </div>

                                </div>






                            </div>
                            <!-- /.container-fluid -->

                    </div>
                    <!-- End of Main Content -->

                    <%- include('layout/sidefooter') %>


                </div>
                <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <%- include('layout/logoutuser') %>



            <%- include('layout/footer') %>